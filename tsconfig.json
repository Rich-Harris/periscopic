{
	"include": ["src"],
	"exclude": ["node_modules"],

	"compilerOptions": {
		"target": "es2017",
		"module": "es2015",
		"moduleResolution": "node",

		"declaration": true,
		"declarationDir": "types",
		"emitDeclarationOnly": true,

		"noImplicitAny": true,
		"diagnostics": true,
		"noImplicitThis": true,
		"noEmitOnError": true,

		"newLine": "lf"
	}
}
